<div class="row">
    <div class="panel panel-success">
        <div class="panel-heading">
            Door Devices
            <div style="float: right;">
                <div class="btn-group btn-group-xs">@Html.ActionLink("New Android Device", "Create", null, new { @class = "btn btn-primary" })</div>
            </div>
        </div>
        <div class="table-body">
            <table id="androidDevicesTable" class="table table-bordered table-striped table-hover table-condensed table-selectable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SmartDoorDeviceId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserId)
